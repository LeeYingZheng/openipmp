<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <servlet>
        <servlet-name>
            RemoteVerify
        </servlet-name>
        <servlet-class>
            se.anatom.ejbca.samples.RemoteVerifyServlet
        </servlet-class>
        <init-param>
            <param-name>dbfilename</param-name>
            <param-value>/database/dbUsers.txt</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
	<servlet-name>RemoteVerify</servlet-name>
	<url-pattern>/verify</url-pattern>
    </servlet-mapping>
    
</web-app>
